{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "module": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
        "lib": [
            "DOM",
            "ES2021"
        ],
        "paths": {
            "app-html": [
                "./packages/app-html"
            ],
            "app-react": [
              "./packages/app-react"
            ],
            "ui-router": [
                "./packages/ui-router"
            ]
        }
    }
}
